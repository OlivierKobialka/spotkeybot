{
    "name": "pkbot",
    "version": "1.0.0",
    "private": false,
    "description": "A Probot app",
    "author": "Olivier Kobialka",
    "license": "ISC",
    "homepage": "https://github.com/equichainfi/pkbot",
    "keywords": [
        "probot",
        "github",
        "probot-app"
    ],
    "scripts": {
        "build": "tsc",
        "start": "probot run ./lib/index.js",
        "test": "jest",
        "prepare": "husky install"
    },
    "dependencies": {
        "@commitlint/config-conventional": "^18.4.3",
        "commitlint": "^18.4.3",
        "prettier": "^3.1.1",
        "probot": "^12.2.4"
    },
    "devDependencies": {
        "@types/jest": "^29.0.0",
        "@types/node": "^18.0.0",
        "@typescript-eslint/eslint-plugin": "^6.14.0",
        "@typescript-eslint/parser": "^6.14.0",
        "eslint": "^8.55.0",
        "jest": "^29.0.0",
        "nock": "^13.0.5",
        "smee-client": "^1.2.2",
        "ts-jest": "^29.0.0",
        "typescript": "^4.1.3",
        "husky": "^8.0.0"
    },
    "engines": {
        "node": ">= 10.13.0"
    },
    "commitlint": {
        "rules": {
            "references-empty": [
                2,
                "never"
            ]
        },
        "parserPreset": {
            "parserOpts": {
                "issuePrefixes": [
                    "EQC-"
                ]
            }
        }
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}
