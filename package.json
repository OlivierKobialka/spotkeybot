{
    "name": "eqcbot",
    "version": "1.0.0",
    "private": false,
    "description": "Equichain Private Key Bot",
    "author": "Olivier Kobialka",
    "license": "ISC",
    "homepage": "https://github.com//",
    "keywords": [
        "probot",
        "github",
        "probot-app"
    ],
    "scripts": {
        "build": "tsc",
        "start": "probot run ./lib/index.js",
        "test": "jest",
        "fmt": "npm run build && npx prettier --write . && npm run eslint -- --fix",
        "dev": "npm run build && npm run start",
        "eslint": "eslint --ext .ts ."
    },
    "commitlint": {
        "rules": {
            "references-empty": [
                2,
                "never"
            ]
        },
        "parserPreset": {
            "parserOpts": {
                "issuePrefixes": [
                    "EQC-"
                ]
            }
        }
    },
    "dependencies": {
        "probot": "^12.2.4"
    },
    "devDependencies": {
        "@types/jest": "^29.5.11",
        "@types/mocha": "^10.0.6",
        "@types/node": "^18.0.0",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "dotenv": "^16.3.1",
        "eslint": "^8.56.0",
        "jest": "^29.0.0",
        "nock": "^13.0.5",
        "prettier": "^3.1.1",
        "smee-client": "^1.2.2",
        "ts-jest": "^29.0.0",
        "typescript": "^4.1.3"
    },
    "engines": {
        "node": ">= 10.13.0"
    }
}
